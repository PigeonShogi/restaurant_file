<div class="container mt-5">
  <div class="row text-center">
    <h1 class="mb-1 restaurant-show-title">{{restaurants.name}}</h1>
    <p class="mb-1">
      <span class="text-secondary">
        <i class="fas fa-utensils pr-2"></i>
        類別：
      </span>
      {{restaurants.category}}
    </p>

    <p class="mb-1">
      <span class="text-secondary">
        <i class="fas fa-map-marker-alt pr-2"></i>
        地址：
      </span>
      {{restaurants.location}}
      <a href="{{restaurants.google_map}}" class="text-secondary" target="_blank" style="display:block ;">
        <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        <span>餐廳地圖</span>
      </a>
    </p>

    <p class="mb-1">
      <span class="text-secondary">
        <i class="fas fa-mobile-alt pr-2"></i>
        電話：
      </span>
      {{restaurants.phone}}
    </p>

    <p class="mb-5">
      <span class="text-secondary">
        <i class="fa-solid fa-book-bookmark"></i>
        關於這間餐廳：
      </span>
      {{restaurants.description}}
    </p>

    <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurants.image}}" alt="{{restaurants.name}}"
      style="max-width: 600px;">

    <div class="row justify-content-center">
      <a href="/restaurants/{{id}}/edit" class="btn btn-warning mb-5 a-normal">編輯餐廳資訊</a>
    </div>

  </div>
</div>